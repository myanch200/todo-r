= form_for @task do |f|
  - if @task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        - @task.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :text
    = f.text_field :text
  .field
    = f.label :is_completed
    = f.check_box :is_completed
  .actions
    = f.submit 'Save'
